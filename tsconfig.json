{
    "compilerOptions": {
        "incremental": true,
        "outDir": "./built",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        // "noEmit": true,
        "noEmitOnError": true,
        "strict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2021",
        "removeComments": true,
        "module": "UMD",
        "noImplicitThis": true
        // "module": "node16", 
        // "moduleResolution": "node16",
        // "module": "esnext",
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "gulpfile.js",
        "node_modules",
        "built",
        "./src/*.json"
    ]
}